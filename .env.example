# Story Thread Surfacing System - Environment Configuration

# Atlantic Archive (Infactory) API
INFACTORY_API_KEY=your_api_key_here
INFACTORY_API_URL=https://atlantichack-api.infactory.ai

# Database
DATABASE_URL=sqlite:///./data/story_threads.db

# Google Trends
TRENDS_GEO=US
TRENDS_TIMEFRAME=now 7-d

# Analysis Settings
DEFAULT_THRESHOLD=0.10
MAX_RESULTS_PER_QUERY=10
RERANK_ENABLED=true
CACHE_TTL_SECONDS=3600

# Proactive Feed
PROACTIVE_ENABLED=true
PROACTIVE_SCAN_INTERVAL_HOURS=24
PROACTIVE_BATCH_SIZE=5
MIN_TREND_VELOCITY=50

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
